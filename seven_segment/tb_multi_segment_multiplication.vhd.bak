module tb_mult4_display;
    // Testbench signals
    logic [3:0] a, b;

    // DUT (Device Under Test)
    multi_segment_multiplication dut (
        .a(a),
        .b(b),
    );

    // Stimulus
    initial begin
        // Iterate all combinations of a and b
        for (int i = 0; i < 16; i++) begin
            for (int j = 0; j < 16; j++) begin
                a = i;
                b = j;
                #10; // small delay to settle

                // Display results in console
                $display("a=%0d (0x%0h), b=%0d (0x%0h), product=%0d (0x%0h), seg=%p",
                          a, a, b, b, a*b, a*b, seg);
            end
        end
        $finish;
    end
endmodule
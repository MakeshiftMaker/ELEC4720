module mult4_display (
    input  logic [3:0] a,   // 4-bit input A
    input  logic [3:0] b   // 4-bit input B
);
    // Product
    logic [7:0] product;

    // Multiplier
    mult4 u_mult (
        .a(a),
        .b(b),
        .c(product)
    );

    // --- Display input A (1 digit) ---
    multi_digit_display #(.NUM_DIGITS(1)) disp_a (
        .number(a)         // 4 bits wide
    );

    // --- Display input B (1 digit) ---
    multi_digit_display #(.NUM_DIGITS(1)) disp_b (
        .number(b)         // 4 bits wide
    );

    // --- Display product C (2 digits) ---
    multi_digit_display #(.NUM_DIGITS(2)) disp_c (
        .number(product)   // 8 bits wide (two hex digits)
    );

endmodule

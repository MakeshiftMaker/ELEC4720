module tb_mult4_display;

    // Inputs
    logic [3:0] a, b;

    // Instantiate the DUT (Device Under Test)
    mult4_display dut (
        .a(a),
        .b(b)
    );

    // Test procedure
    initial begin
        // Test case 1: 3 * 5
        a = 4'd3;
        b = 4'd5;
        #5;
        $display("Test 1: a=%d, b=%d", a, b);

        // Test case 2: 7 * 8
        a = 4'd7;
        b = 4'd8;
        #5;
        $display("Test 2: a=%d, b=%d", a, b);

        // Test case 3: 0 * 15
        a = 4'd0;
        b = 4'd15;
        #5;
        $display("Test 3: a=%d, b=%d", a, b);

        // Test case 4: 15 * 15
        a = 4'd15;
        b = 4'd15;
        #5;
        $display("Test 4: a=%d, b=%d", a, b);

        $display("Testbench complete.");
        $finish;
    end

endmodule

module mips(

    input logic clk,
    input logic reset,
    output logic [31:0] pc_out,
    output logic [31:0] rom_data
);

    // instantiate the program counter
    PC pc_inst (
        .clk(clk),
        .reset(reset),
        .Ad(pc_out)
    );

    // ROM in byte/word addressing
    ByteIM rom_inst (
        .Ad(pc_out),
        .Dout(rom_data)
    );

    // clock generator (period = 10 time units)
    //initial clk = 0;
    //always #5 clk = ~clk;

endmodule
